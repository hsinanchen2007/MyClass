<Window x:Class="_029.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_029"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--控件变化时，Teacher 的Name 会跟着变化-->
        <TextBox x:Name="textBox"    Text="{Binding Path=Name, Mode=OneWay,   UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Center" Height="90" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404" FontSize="24" TextChanged="textBox_TextChanged"/>

    </Grid>
</Window>
