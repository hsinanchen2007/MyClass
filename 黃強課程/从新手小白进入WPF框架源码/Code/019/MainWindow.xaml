<Window x:Class="_019.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_019"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Label x:Name="label"   Background="{DynamicResource  MyBrush}"   Content="Label" HorizontalAlignment="Center" Height="45" Margin="0,45,0,0" VerticalAlignment="Top" Width="255"/>
        <Image x:Name="image"   Source="{DynamicResource  MyImage}"   HorizontalAlignment="Left" Height="195" Margin="272,115,0,0" VerticalAlignment="Top" Width="332"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="40" Margin="273,335,0,0" VerticalAlignment="Top" Width="212" Click="button_Click"/>

    </Grid>
</Window>
