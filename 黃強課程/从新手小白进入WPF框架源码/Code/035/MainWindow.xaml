<Window x:Class="_035.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_035"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True"  >
        <Button x:Name="button" Content="上" DockPanel.Dock="Top" />
        <Button x:Name="button1" Content="左" DockPanel.Dock="Left"  />
        <Button x:Name="button2" Content="右" Width="Auto" DockPanel.Dock="Right"/>
        <Button x:Name="button3" Content="下" Width="Auto" DockPanel.Dock="Bottom"/>
   
        <Button x:Name="button4"  Background="red"  Content="中"  />

    </DockPanel>
</Window>
