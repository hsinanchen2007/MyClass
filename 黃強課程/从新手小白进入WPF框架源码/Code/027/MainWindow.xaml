<Window x:Class="_027.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_027"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox"  
                 Text="{Binding  ElementName=slider ,  Path=Value,  
                Mode=TwoWay , UpdateSourceTrigger=PropertyChanged }"  
                 
                 HorizontalAlignment="Left" Height="70" Margin="220,115,0,0" TextWrapping="Wrap"   VerticalAlignment="Top" Width="380" FontSize="24"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="220,252,0,0" VerticalAlignment="Top" Width="380" Height="53" Maximum="100"/>

    </Grid>
</Window>
